{
  "$id": "ordinal-scale@iqb-standard@0.1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ordinal Scales",
  "description": "Scheme to translate numeric values into categories. Used in proficiency level models.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Identifier for the scheme",
      "minLength": 1
    },
    "description": {
      "$ref": "#/definitions/multi_language_text"
    },
    "sourceScaleType": {
      "type": "string",
      "description": "Url to the vocabulary entry for the source (numeric) scale."
    },
    "sourceScaleTypeAsText": {
      "type": "string",
      "description": "Source (numeric) scale type as human readable text."
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "minimal_value": {
            "type": "number",
            "description": "The category applies to values at least of that value"
          },
          "lower_than_value": {
            "type": "number",
            "description": "The category applies to values lower than that"
          },
          "label": {
            "$ref": "#/definitions/multi_language_text"
          },
          "description": {
            "$ref": "#/definitions/multi_language_text"
          }
        }
      },
      "minItems": 1
    }
  },
  "required": [
    "id",
    "sourceScaleType",
    "categories"
  ],
  "definitions": {
    "multi_language_text": {
      "type": "array",
      "description": "Used for storing text. This type applies also in cases when only one language is used.",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "type": "string",
            "minLength": 1,
            "description": "ISO-language code",
            "pattern": "^[a-z]{2}$"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "lang",
          "value"
        ]
      },
      "minItems": 1
    }
  }
}